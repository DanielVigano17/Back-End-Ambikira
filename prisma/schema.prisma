// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  cpf      String  @unique
  tel      String
  estandes Estande[]
 
}

model Estande {

  id       Int  @id @default(autoincrement())
  estande  String  
  autor    User @relation(fields: [autorId], references: [id])
  autorId  Int
  time     Int     
  pontos   Int 

  @@unique([autorId, estande])

}